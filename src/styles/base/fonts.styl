@font-face {
    font-family: 'Galaxy';
    src: url($font-path+'GalaxieCopernicus-Medium.eot');
    src: url($font-path+'GalaxieCopernicus-Medium.eot?#iefix') format('embedded-opentype'),
         url($font-path+'GalaxieCopernicus-Medium.woff') format('woff'),
         url($font-path+'GalaxieCopernicus-Medium.ttf') format('truetype'),
         url($font-path+'GalaxieCopernicus-Medium.svg#GalaxieCopernicus-Medium') format('svg');
    font-weight: normal;
    font-style: normal;
}

