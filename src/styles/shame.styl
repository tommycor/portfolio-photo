.c-background-step {
	opacity 0
	transform translateZ(0)
	transition 1s $ease-out-quint
	
	&:nth-of-type(2){
		background #1e707b
		
		.is-background-0 & {
			opacity 1
		}
	}
	&:nth-of-type(3){
		background #198c8c
		
		.is-background-1 & {
			opacity 1
		}
	}
	&:nth-of-type(4){
		background #19a8a0
		
		.is-background-2 & {
			opacity 1
		}
	}
	&:nth-of-type(5){
		background #f4b054
		
		.is-background-3 & {
			opacity 1
		}
	}
	&:nth-of-type(6){
		background #f09737
		
		.is-background-4 & {
			opacity 1
		}
	}
}



.c-shame {
	top 0
	left 50%
	transform translateX(-50%)
	width 100vw
	height 100%
	position absolute

	z-index -1
}

.c-shame__ten {
	transform translateX(10%)
}


#grids {
	
	top 0
	bottom 0
	
	left  8.3333333333333333%
	right 8.3333333333333333%

	z-index 9999
	
	pointer-events: none
	
	display none
	
	opacity 1

	span {
		position absolute
		display block

		height 100vh
		width  1px
		
		background #4affff
		
		&:nth-of-type(1){
			left 0
		}
		
		&:nth-of-type(2){
			left 8.3333333333333333%
		}
		
		&:nth-of-type(3){
			left 16.666666666666666%
		}
		
		&:nth-of-type(4){
			left 24.999999999999999%
		}
		
		&:nth-of-type(5){
			left 33.3333333333333333%
		}
		
		&:nth-of-type(6){
			left 41.66666666666666665%
		}
		
		&:nth-of-type(7){
			left 49.999999999999999998%
		}
		
		&:nth-of-type(8){
			left 58.333333333333333331%
		}
		
		&:nth-of-type(9){
			left 66.6666666666666666664%
		}
		
		&:nth-of-type(10){
			left 74.99999999999999999997%
		}
		
		&:nth-of-type(11){
			left 83.33333333333333333333%
		}
		
		&:nth-of-type(12){
			left 91.666666666666666666663%
		}
		
		&:nth-of-type(13){
			left 100%
		}
	}
}

.c-background__temp {
	transition background 1s
	background-image url('./assets/medias/images/gradient--top-white.png')
	background-position left top
	background-repeat-y no-repeat
	background-repeat repeat-x
}